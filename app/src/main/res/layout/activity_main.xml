<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sql"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button6"
        android:layout_marginTop="16dp"
        android:background="@drawable/all_button"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_name"
        android:layout_marginBottom="76dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/all_button"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:text=" Email"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_name" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/all_button"
        android:ems="10"
        android:hint="id"
        android:inputType="textEmailAddress"
        android:text="ID"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_name" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="213dp"
        android:background="@drawable/all_button"
        android:onClick="bt_add"
        android:text="Add Data"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/all_button"
        android:onClick="bt_Up"
        android:text="Up Date"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/editText_email"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignEnd="@+id/list"
        android:layout_alignRight="@+id/list"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/all_button"
        android:onClick="bt_delete"
        android:text="Delete"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_email"
        app:layout_constraintVertical_bias="0.577" />

    <ListView
        android:id="@+id/list"
        android:layout_width="368dp"
        android:layout_height="246dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_marginTop="50dp"
        android:background="@drawable/sql_button"
        android:cacheColorHint="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="257dp" />
</RelativeLayout>